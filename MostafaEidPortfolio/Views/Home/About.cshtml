@model IEnumerable<MostafaEidPortfolio.Models.Course>

@{
    ViewData["Title"] = "About Me";
}

<div class="container mt-4">
    <h2>About Me</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <p>Hello! I'm <strong>Mostafa Mahmoud Eid</strong>, a dedicated and driven student in the 4th year at the Faculty of Computers and Artificial Intelligence, Fayoum University.</p>
            <p>My passion lies in backend development, where I enjoy building robust, scalable, and efficient software solutions. I am proficient in the .NET ecosystem and have a strong grasp of fundamental computer science principles.</p>

            <h3>Technical Skills</h3>
            <div class="row">
                <div class="col-md-6">
                    <h5>Languages</h5>
                    <ul>
                        <li>C#</li>
                        <li>Python</li>
                        <li>C++</li>
                        <li>Java</li>
                        <li>SQL</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5>Technologies & Concepts</h5>
                    <ul>
                        <li>.NET Backend Development</li>
                        <li>Entity Framework Core</li>
                        <li>Object-Oriented Programming (OOP)</li>
                        <li>Data Structures & Algorithms</li>
                        <li>HTML, CSS, JavaScript</li>
                        <li>Power BI</li>
                    </ul>
                </div>
            </div>

            <h3 class="mt-5">Courses & Certifications</h3>

            @if (Model != null)
            {
                <div class="row">
                    @foreach (var course in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@course.Title</h5>
                                    <p class="card-text">@course.Description</p>

                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @(course.Progress * 100)%;"
                                             aria-valuenow="@course.Progress"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
        <div class="col-md-4">
            <!--   <img src="~/images/projects/Me.jpg" class="img-fluid rounded-circle shadow" alt="Profile Picture of Mostafa Mahmoud">-->
        </div>
    </div>
</div>